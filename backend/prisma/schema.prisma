generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = "//YOUR_POSTGRES_CONNECTION_STRING"
}

model User {
  id Int @id @default(autoincrement())
  firstName String?
  lastName String?
  email String @unique
  password String
  todos Todos[]
}

model Todos {
  id Int @id @default(autoincrement())
  userId Int
  title String 
  description String?
  done Boolean? @default(false)
  user User @relation(fields: [userId], references: [id])
}



